				dad.dance();
			if (generatedMusic)
				notes.sort(sortNotes, FlxSort.DESCENDING);

			var introSprPaths:Array<String> = ["ready", "set", "go"];
			var altSuffix:String = "";
			var introSndPaths:Array<String> = ["intro3" + altSuffix, "intro2" + altSuffix,
